<ul>
  <% tasks.each do |task| %>
    <li>
      <img src="<%= gravatar_url(task.user, { size: 50 }) %>" alt="">
      <div>
        <div>
          <%= link_to task.user.name, user_path(task.user) %> <span>posted at <%= task.created_at %></span>
        </div>
        <div>
          <p><%= task.content %></p>
        </div>
        <div>
          <% if current_user == task.user %>
            <%= link_to "Delete", task, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate tasks %>
</ul>